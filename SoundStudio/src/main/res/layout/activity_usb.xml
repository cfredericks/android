<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
                android:id="@+id/lblUsbStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOT ATTACHED"
                android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>


    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        <Button
                android:id="@+id/btnToggleLed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:text="Toggle LED" />



        <Button
                android:id="@+id/btnToggleAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Toggle Animation" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <CheckBox
                android:id="@+id/chkLedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED Status  " android:clickable="false"/>

        <CheckBox
                android:id="@+id/chkPushbuttonStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pushbutton State" android:clickable="false"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potentiometer: "
                android:textAppearance="?android:attr/textAppearanceMedium" />


        <ProgressBar
                android:id="@+id/pgsPotentiometer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>


    <GridLayout
            android:id="@+id/gridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6" >

        <Button
                android:id="@+id/btnDtmf1"
                android:layout_width="54dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:text="1" />

        <Button
                android:id="@+id/btnDtmf2"
                android:layout_width="54dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:text="2" />



        <Button
                android:id="@+id/btnDtmf3"
                android:layout_width="54dp"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:text="3" />




        <Button
                android:id="@+id/btnDtmf6"
                android:layout_width="54dp"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_row="2"
                android:layout_rowSpan="4"
                android:text="6" />

        <Button
                android:id="@+id/btnDtmf4"
                android:layout_width="54dp"
                android:layout_column="0"
                android:layout_gravity="bottom"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:text="4" />

        <Button
                android:id="@+id/btnDtmf5"
                android:layout_width="54dp"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:text="5" />

        <Button
                android:id="@+id/btnDtmf8"
                android:layout_width="54dp"
                android:layout_column="1"
                android:layout_gravity="bottom"
                android:layout_row="5"
                android:layout_rowSpan="3"
                android:text="8" />



        <Button
                android:id="@+id/btnDtmf9"
                android:layout_width="54dp"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_row="5"
                android:layout_rowSpan="4"
                android:text="9" />

        <Button
                android:id="@+id/btnDtmf7"
                android:layout_width="54dp"
                android:layout_column="0"
                android:layout_gravity="bottom"
                android:layout_row="6"
                android:layout_rowSpan="2"
                android:text="7" />

        <Button
                android:id="@+id/btnDtmfStar"
                android:layout_width="54dp"
                android:layout_column="0"
                android:layout_row="9"
                android:layout_rowSpan="3"
                android:text="*" />





        <Button
                android:id="@+id/btnDtmfHash"
                android:layout_width="54dp"
                android:layout_column="2"
                android:layout_gravity="bottom"
                android:layout_row="9"
                android:layout_rowSpan="3"
                android:text="#" />

        <Button
                android:id="@+id/btnDtmf0"
                android:layout_width="54dp"
                android:layout_column="1"
                android:layout_row="10"
                android:layout_rowSpan="2"
                android:text="0" />


        <Button
                android:id="@+id/btnDtmfDial"
                android:layout_width="54dp"
                android:layout_column="0"
                android:layout_row="12"
                android:layout_rowSpan="3"
                android:text="Dial" />

        <Button
                android:id="@+id/btnDtmfRing"
                android:layout_width="54dp"
                android:layout_column="1"
                android:layout_gravity="bottom"
                android:layout_row="14"
                android:text="Ring" />

        <Button
                android:id="@+id/btnDtmfBusy"
                android:layout_width="54dp"
                android:layout_column="2"
                android:layout_columnSpan="3"
                android:layout_row="14"
                android:text="Busy" />

        <Space
                android:layout_width="56dp"
                android:layout_height="1dp"
                android:layout_column="0"
                android:layout_row="0" />

        <Space
                android:layout_width="56dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0" />

        <Space
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0" />

        <Space
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3" />

        <Space
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="6" />

        <Space
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="10" />
    </GridLayout>

</LinearLayout>